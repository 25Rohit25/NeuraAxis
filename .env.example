# ================================
# NEURAXIS Environment Configuration
# Copy this file to .env and fill in the values
# ================================

# ============ General ============
NODE_ENV=development
APP_NAME=NEURAXIS
APP_VERSION=0.1.0

# ============ Frontend (Next.js) ============
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ============ Backend (FastAPI) ============
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_DEBUG=true
FASTAPI_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============ Database (PostgreSQL) ============
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=neuraxis
POSTGRES_USER=neuraxis_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============ Redis ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ============ Authentication ============
JWT_SECRET_KEY=your_super_secret_jwt_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ NextAuth.js ============
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars

# ============ OAuth Providers ============
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# ============ AI/ML Services ============
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# ML Model Configuration
MODEL_CACHE_DIR=/app/models
MODEL_INFERENCE_DEVICE=cpu
MODEL_MAX_BATCH_SIZE=8

# ============ Medical APIs ============
FHIR_BASE_URL=
HL7_ENDPOINT=
DICOM_SERVER_URL=

# ============ Cloud Storage ============
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=neuraxis-storage

# Azure Storage (Alternative)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=neuraxis

# ============ Email (SMTP) ============
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@neuraxis.ai
SMTP_FROM_NAME=NEURAXIS

# ============ Monitoring & Logging ============
SENTRY_DSN=
LOG_LEVEL=INFO
ENABLE_TELEMETRY=false

# ============ Rate Limiting ============
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============ Feature Flags ============
ENABLE_AI_DIAGNOSIS=true
ENABLE_IMAGE_ANALYSIS=true
ENABLE_PATIENT_PORTAL=false
ENABLE_HIPAA_AUDIT_LOGS=true

# ============ Security ============
ENCRYPTION_KEY=your_32_byte_encryption_key_here
API_KEY_SALT=your_api_key_salt_here

# ============ Development Tools ============
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false
